<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <% if user_signed_in? %>
          <p>
            <strong>Author:</strong>
            <%= @post.user.name %>
          </p>
        <% end %>
        <p>
          <strong>Title:</strong>
          <%= @post.title %>
        </p>
        <p>
          <strong>Body:</strong>
          <%= @post.body %>
        </p>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_post_path(@post) %> |
        <% end %>
        <%= link_to 'Back', posts_path %>
      </div>
    </div>
  </div>
</div>
